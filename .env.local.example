# ============================================================
# MapBot MaaS — Environment Variables
# ============================================================
# Copy this file to .env.local and fill in your API keys

# ── Kakao API ──────────────────────────────────────────────
# https://developers.kakao.com → 내 애플리케이션 → 앱 키
NEXT_PUBLIC_KAKAO_MAP_KEY=your_kakao_javascript_key_here
KAKAO_REST_API_KEY=your_kakao_rest_api_key_here

# ── ODsay 대중교통 API ─────────────────────────────────────
# https://lab.odsay.com → 회원가입 → API Key 발급 (무료)
ODSAY_API_KEY=your_odsay_api_key_here

# ── 공공데이터포털 (국토교통부 버스/실시간 정보) ──────────────
# https://www.data.go.kr → 버스위치정보조회서비스
PUBLIC_DATA_BUS_KEY=your_public_data_portal_key_here

# ── Firebase ───────────────────────────────────────────────
# https://console.firebase.google.com → 프로젝트 설정 → 앱 추가
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ── Firebase Admin (서버사이드 전용) ────────────────────────
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
# Base64 encoded private key:  base64 < serviceAccountKey.json
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ── App Config ─────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MapBot MaaS
NEXT_PUBLIC_WS_URL=wss://your-ws-server.com

# ── MU Point System ────────────────────────────────────────
MU_POINT_EARN_RATE=0.05
MU_POINT_MAX_DISCOUNT_RATE=0.30
